.decoration
  .background
    = image_tag "background/#{country}.jpg"

    .title
      %p.site-title= t(:title)
      =image_tag "hrtitle.png"
      %h1.welcome= t("country.#{country}")
      %p= t("introduction.#{country}")

    .country-switcher
      %ul
        %center
          - data.discovery.countries.each do |c|
            %li
              = link_to image_tag("buttons/active/#{c}.png"), "/#{c}.html"
              %br
              = link_to t("country.#{c}"), "/#{c}.html"
            
            

